{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "dist", 
      "noImplicitAny": false,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "alwaysStrict": true, 
      "removeComments": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}